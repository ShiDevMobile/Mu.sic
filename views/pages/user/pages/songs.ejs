<main style="background-color: #1c2439" class="col-10 content-song container-main-content">
    <div
        style="padding: 20px; margin-top: 30px"
        class="mb-4 d-flex justify-content-between container"
    >
        <input
            class="form-control search-input me-2 d-flex col-5"
            type="search"
            placeholder="Search"
            aria-label="Search"
            style="
                background-color: #12192c;
                outline-color: white;
                color: white;
                padding: 10px 25px;
                border-radius: 40px;
            "
        />
    </div>
    <section class="container">
        <section class="splide d-none">
            <div class="splide__slider">
                <div class="splide__track">
                    <ul class="splide__list" style="column-gap: 10px"></ul>
                </div>
            </div>
        </section>
        <ul class="list list_songs d-flex flex-wrap text-white list_songs_page_2" style="gap: 30px">
            <% for (const song of songs) { %>
            <div class="temp-card">
                <div
                    data-id="<%= song.song_id %>"
                    class="card song-player"
                    style="background-color: #12192c; cursor: pointer"
                >
                    <img
                        src="<%= song.image %>"
                        class="card-img-top"
                        style="height: 200px; object-fit: contain"
                        alt="<%= song.title %>"
                    />
                    <div class="card-body">
                        <h5 class="card-title"><%= song.title %></h5>
                        <p class="card-text"><%= song.artist %></p>
                    </div>
                </div>
                <div class="liked-song">
                    <i class="bi bi-heart"></i>
                    <i class="bi bi-heart-fill"></i>
                </div>
            </div>
            <% } %>
        </ul>
        <button>dang nhap</button>
    </section>
</main>
